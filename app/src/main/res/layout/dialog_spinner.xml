<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/padding_M"
    android:layout_marginBottom="@dimen/padding_M"

    android:gravity="center"
    android:minWidth="@dimen/popup_width"
    android:orientation="vertical"
    android:paddingLeft="@dimen/padding_M"
    android:paddingTop="@dimen/padding_M"
    android:paddingRight="@dimen/padding_M"
    android:paddingBottom="@dimen/padding_L">

    <TextView
        android:id="@+id/dialog_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:gravity="center_vertical"
        android:maxLines="2"
        android:minHeight="38dp"
        android:paddingLeft="@dimen/padding_XXL"
        android:paddingRight="@dimen/padding_XXL"
        android:text="@string/app_name"
        android:textColor="@color/text_gray"
        android:textSize="@dimen/text_lv3_5"
        android:textStyle="bold" />

<!--    <com.bmbsoft.ecommerce.ui.view.text.CusSearchView-->
<!--        android:id="@+id/dialog_search_parent"-->
<!--        style="@style/searchView"-->
<!--        android:layout_width="match_parent"-->
<!--        android:layout_marginLeft="@dimen/padding_XL"-->
<!--        android:layout_marginTop="@dimen/padding_M"-->
<!--        android:layout_marginRight="@dimen/padding_XL"-->
<!--        android:layout_marginBottom="@dimen/padding_M" />-->

    <TextView
        android:id="@+id/dialog_empty"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:minHeight="@dimen/padding_60"
        android:text="@string/msg_empty"
        android:textColor="@color/text_gray"
        android:textSize="@dimen/text_lv3"
        android:visibility="gone" />

    <com.bmbsoft.ecommerce.ui.view.recycler.MaxHeightRecyclerView
        android:id="@+id/dialog_recycler"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_gravity="center_vertical"
        android:layout_marginTop="@dimen/padding_M"
        android:layout_weight="0.9"
        android:paddingLeft="@dimen/padding_L"
        android:paddingRight="@dimen/padding_L"
        app:max_height="280dp" />

</LinearLayout>