             android:layout_height="wrap_content"
             android:layout_marginStart="@dimen/padding_XXL"
             android:layout_marginLeft="@dimen/padding_XXL"
             android:layout_marginEnd="@dimen/padding_L"
             android:layout_marginRight="@dimen/padding_L"
             android:visibility="gone"
             app:layout_constraintBottom_toBottomOf="parent"
             app:layout_constraintLeft_toRightOf="@+id/holder_favorite_thumb"
             app:layout_constraintTop_toBottomOf="@+id/holder_favorite_price"
             app:srb_rating="4"
             app:srb_starSize="17dp" />

         <TextView
             android:id="@+id/holder_favorite_comments"
             style="@style/orderValue"
             android:layout_marginStart="@dimen/padding_XXL"
             android:layout_marginLeft="@dimen/padding_XXL"
             android:text="50 comments"
             android:visibility="gone"
             app:layout_constraintBottom_toBottomOf="parent"
             app:layout_constraintLeft_toRightOf="@+id/holder_favorite_rating"
             app:layout_constraintRight_toRightOf="parent"
             app:layout_constraintTop_toBottomOf="@+id/holder_favorite_price" />-->
    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>